<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vs="clr-namespace:Centrifuge.Client.Views"
		Width="800"
		Height="1000"
		WindowStartupLocation="CenterScreen"
        x:Class="Centrifuge.Client.Views.MainWindow"
        Title="Centrifuge">

	<DockPanel>
		<vs:Header DockPanel.Dock="Top"/>

		<SplitView IsPaneOpen="True" DisplayMode="Inline" OpenPaneLength="100">
			<SplitView.Pane>
				<vs:TabStrip Name="LeftTabStrip"/>
			</SplitView.Pane>
			<vs:Gallery Name="Gallery"/>
		</SplitView>

	</DockPanel>
</Window>
