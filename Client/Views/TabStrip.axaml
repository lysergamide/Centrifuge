<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vs="clr-namespace:Centrifuge.Client.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Centrifuge.Client.Views.TabStrip">

	<StackPanel Orientation="Vertical" Width="100">
		<ItemsRepeater Items="{Binding Tabs}" HorizontalAlignment="Stretch"/>
		<Button Content="+" Click="AddTab" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
	</StackPanel>
</UserControl>
